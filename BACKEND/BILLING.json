      ],
      "id": "set-billing-period",
      "name": "Set Billing Period",
      "notes": "Calculates billing period (previous month)"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.context7.com/v1/search",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "context7Api",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "query",
              "value": "type:client"
            },
            {
              "name": "limit",
              "value": "100"
            }
          ]
        },
        "options": {}
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        -432,
        96
      ],
      "id": "get-all-clients-context7",
      "name": "Get All Clients (Context7)",
      "notes": "Fetches all active client configurations",
      "alwaysOutputData": true
    },
    {
      "parameters": {
        "jsCode": "// Extract and flatten client configurations\nconst response = $input.first().json;\nconst billingPeriod = $('Set Billing Period').item.json.current_month;\n\nif (!response.results || response.results.length === 0) {\n  return [];\n}\n\nconst clients = response.results.map(result => {\n  const doc = result.document || {};\n  return {\n    json: {\n      clientId: doc.clientId,\n      clientName: doc.clientName,\n      vapiAssistantId: doc.vapiAssistantId,\n      taxaLunara: doc.billingPlan?.taxaLunara || 0,\n      costPerMinut: doc.billingPlan?.costPerMinut || 0,\n      billingPeriod: billingPeriod,\n      active: doc.metadata?.active !== false\n    }\n  };\n});\n\n// Filter only active clients\nreturn clients.filter(c => c.json.active);"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        -208,
        96
      ],
      "id": "parse-clients",
      "name": "Parse Client Configs",
      "notes": "Extracts billing info from each client"
    },
    {
      "parameters": {
        "batchSize": 1,
        "options": {}
      },
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [
        16,
        96
      ],
      "id": "loop-over-clients",
      "name": "Loop Over Clients"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.vapi.ai/call",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "vapiApi",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "assistantId",
              "value": "={{ $json.vapiAssistantId }}"
            },
            {
              "name": "timeRangeStart",
              "value": "={{ DateTime.fromFormat($json.billingPeriod, 'yyyy-MM').startOf('month').toISO() }}"
            },
            {
              "name": "timeRangeEnd",
              "value": "={{ DateTime.fromFormat($json.billingPeriod, 'yyyy-MM').endOf('month').toISO() }}"
            }
          ]
        },
        "options": {}
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        240,
        96
      ],
      "id": "get-vapi-usage",
      "name": "Get Vapi Usage",
      "notes": "Fetches usage data from Vapi API for the billing period",
      "alwaysOutputData": true,
      "retryOnFail": true,
      "maxTries": 3
    },
    {
      "parameters": {
        "jsCode": "// Calculate billing totals from Vapi usage data\nconst clientData = $('Loop Over Clients').item.json;\nconst vapiResponse = $input.first().json;\n\n// Extract usage metrics\nlet totalMinutes = 0;\nlet totalCalls = 0;\nlet successfulCalls = 0;\n\nif (vapiResponse.data && Array.isArray(vapiResponse.data)) {\n  totalCalls = vapiResponse.data.length;\n  \n  vapiResponse.data.forEach(call => {\n    // Sum up duration in minutes\n    const durationSeconds = call.duration || 0;\n    totalMinutes += durationSeconds / 60;\n    \n    // Count successful calls\n    if (call.status === 'completed' || call.status === 'ended') {\n      successfulCalls++;\n    }\n  });\n}\n\n// Round minutes up to nearest whole number for billing\ntotalMinutes = Math.ceil(totalMinutes);\n\n// Calculate costs\nconst costMinute = totalMinutes * clientData.costPerMinut;\nconst taxaFixa = clientData.taxaLunara;\nconst totalDePlata = costMinute + taxaFixa;\n\n// Calculate due date (30 days from now)\nconst dueDate = DateTime.now().plus({ days: 30 }).toISO();\n\nreturn {\n  json: {\n    clientId: clientData.clientId,\n    clientName: clientData.clientName,\n    perioada: clientData.billingPeriod,\n    vapiAssistantId: clientData.vapiAssistantId,\n    \n    // Usage metrics\n    minuteTotale: totalMinutes,\n    totalCalls: totalCalls,\n    successfulCalls: successfulCalls,\n    \n    // Cost breakdown\n    costMinute: costMinute,\n    taxaFixa: taxaFixa,\n    totalDePlata: totalDePlata,\n    \n    // Billing details\n    status: 'PENDING',\n    dueDate: dueDate,\n    currency: 'RON'\n  }\n};"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        464,
        96
      ],
      "id": "calculate-invoice",
      "name": "Calculate Invoice Totals",
      "notes": "Processes usage data and calculates invoice amounts"
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO \"Factura\" (\n  \"clientId\",\n  \"clientName\",\n  \"perioada\",\n  \"minuteTotale\",\n  \"totalCalls\",\n  \"successfulCalls\",\n  \"costMinute\",\n  \"taxaFixa\",\n  \"totalDePlata\",\n  \"status\",\n  \"dueDate\",\n  \"vapiAssistantId\",\n  \"currency\",\n  \"createdAt\",\n  \"updatedAt\"\n) VALUES (\n  '{{ $json.clientId }}',\n  '{{ $json.clientName }}',\n  '{{ $json.perioada }}',\n  {{ $json.minuteTotale }},\n  {{ $json.totalCalls }},\n  {{ $json.successfulCalls }},\n  {{ $json.costMinute }},\n  {{ $json.taxaFixa }},\n  {{ $json.totalDePlata }},\n  '{{ $json.status }}',\n  '{{ $json.dueDate }}',\n  '{{ $json.vapiAssistantId }}',\n  '{{ $json.currency }}',\n  NOW(),\n  NOW()\n)\nON CONFLICT (\"clientId\", \"perioada\") \nDO UPDATE SET\n  \"minuteTotale\" = {{ $json.minuteTotale }},\n  \"totalCalls\" = {{ $json.totalCalls }},\n  \"successfulCalls\" = {{ $json.successfulCalls }},\n  \"costMinute\" = {{ $json.costMinute }},\n  \"taxaFixa\" = {{ $json.taxaFixa }},\n  \"totalDePlata\" = {{ $json.totalDePlata }},\n  \"updatedAt\" = NOW()\nRETURNING *;",
        "options": {}
      },
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [
        688,
        96
      ],
